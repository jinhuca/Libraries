<Window x:Class="C0206.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C0206"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <TextBlock x:Name="txt">
      <Run FontStyle="Italic" FontFamily="Georgia" Foreground="Red" FontSize="40" Text="Rich"/>
      <Run FontStyle="Normal" FontFamily="Comic Sans MS" Foreground="Blue" FontSize="30" Text=" Text"/>
      <Run FontStyle="Normal" FontFamily="Impact" Foreground="DarkOrange" FontSize="50" Text=" In "/>
    </TextBlock>
  </Grid>
</Window>
