<Window x:Class="C0201.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C0201"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Window.Resources>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Button Grid.Row="0" 
            Width="200"
            Background="{x:Null}"
            Height="{x:Static SystemParameters.IconHeight}"
            Content="{Binding Path=Height, RelativeSource={RelativeSource Self}}"/>
    <Button Grid.Row="1" 
            Width="200"
            Height="100"
            Content="{}{This is not a markup extension!">
      <Button.Effect>
        <DropShadowEffect BlurRadius="21" Color="Black" Direction="0" ShadowDepth="0" Opacity="0.6"></DropShadowEffect>
      </Button.Effect>
    </Button>
    <Button Grid.Row="2"
            Width="200">
      <Button.Background>
        <x:Null/>
      </Button.Background>
      <Button.Height>
        <x:Static Member="SystemParameters.IconHeight"/>
      </Button.Height>
      <Button.Content>
        <Binding Path="Height">
          <Binding.RelativeSource>
            <RelativeSource Mode="Self"/>
          </Binding.RelativeSource>
        </Binding>
      </Button.Content>
    </Button>
    <Button Grid.Row="3" Content="Hello">
      <Button.ContentTemplate>
        <DataTemplate>
          <TextBlock FontSize="30" FontWeight="Black" Foreground="Red"
                     Text="{Binding}"/>
        </DataTemplate>
      </Button.ContentTemplate>
    </Button>
  </Grid>
</Window>
