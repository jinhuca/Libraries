<Window x:Class="C0602.LatitudeCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:media3D="clr-namespace:Petzold.Media3D;assembly=Petzold.Media3D"
        Title="Latitude Calculation" Height="450" Width="800">
  <Window.Resources>
    <media3D:PathFigure3DCollection x:Key="circle">
      <media3D:PathFigure3D StartPoint="1 0 0">
        <media3D:PathFigure3D.Segments>
          <media3D:PolyBezierSegment3D Points="1 0 0.55, 0.55 0 1, 0 0 1,
                                              -0.55 0 1, -1 0 0.55, -1 0 0,
                                              -1 0 -0.55, -0.55 0 -1, 0 0 -1,
                                              0.55 0 -1, 1 0 -0.55, 1 0 0"/>
        </media3D:PathFigure3D.Segments>
      </media3D:PathFigure3D>
    </media3D:PathFigure3DCollection>
    <media3D:PathGeometry3D x:Key="latitude" Figures="{StaticResource circle}"/>
    <media3D:PathGeometry3D x:Key="longitude" Figures="{StaticResource circle}">
      <media3D:PathGeometry3D.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="1 0 0" Angle="90"/>
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:PathGeometry3D.Transform>
    </media3D:PathGeometry3D>
  </Window.Resources>
  <Viewport3D Width="570">
    <media3D:Axes Extent="1.1" Rounding="16"/>
    <!-- 30 degrees. -->
    <media3D:WirePath Rounding="16" Thickness="2" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.866" ScaleY="0.866" ScaleZ="0.866"/>
          <TranslateTransform3D OffsetY="0.5"/>
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>
    <media3D:WireLine Rounding="16" Point1="0 0 0" Point2="0.866 0.5 0"/>
    <media3D:WireText Rounding="16" Text="&#x007C;" Origin="0.25 0.025 0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    <media3D:WireText Rounding="16" Text="o" Origin="0.25 0.025 0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    <media3D:WireLine Rounding="16" Point1="0.866 0.5 0" Point2="0.866 0 0"/>
    <media3D:WireLine Rounding="16" Point1="0.866 0.5 0" Point2="0 0.5 0"/>
    <ModelVisual3D>
      <ModelVisual3D.Content>
        <Model3DGroup>
          <AmbientLight Color="#808080"/>
          <DirectionalLight Color="#808080" Direction="2, -3 -1"/>
        </Model3DGroup>
      </ModelVisual3D.Content>
    </ModelVisual3D>
    <Viewport3D.Camera>
      <PerspectiveCamera Position="-1 1 5" LookDirection="1 -1 -5" UpDirection="0 1 0" FieldOfView="45"/>
    </Viewport3D.Camera>
  </Viewport3D>
</Window>
