<Window x:Class="C0601.LongitudeAndLatitude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:media3D="clr-namespace:Petzold.Media3D;assembly=Petzold.Media3D"
        Title="Longitude and Latitude" Height="450" Width="800">
  <Window.Resources>
    <media3D:PathFigure3DCollection x:Key="circle">
      <media3D:PathFigure3D StartPoint="1 0 0">
        <media3D:PathFigure3D.Segments>
          <media3D:PolyBezierSegment3D Points="1 0 0.55, 0.55 0 1, 0 0 1,
                                                    -0.55 0 1, -1 0 0.55, -1 0 0,
                                                   -1 0 -0.55, -0.55 0 -1, 0 0 -1,
                                                    0.55 0 -1, 1 0 -0.55, 1 0 0" />
        </media3D:PathFigure3D.Segments>
      </media3D:PathFigure3D>
    </media3D:PathFigure3DCollection>

    <media3D:PathGeometry3D x:Key="latitude" Figures="{StaticResource circle}" />

    <media3D:PathGeometry3D x:Key="longitude" Figures="{StaticResource circle}">
      <media3D:PathGeometry3D.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="1 0 0" Angle="90" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:PathGeometry3D.Transform>
    </media3D:PathGeometry3D>
  </Window.Resources>
  <Viewport3D Width="650">

    <media3D:WirePath Rounding="16" Thickness="3" Data="{StaticResource latitude}" />

    <!-- 15 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.966" ScaleY="0.966" ScaleZ="0.966" />
          <TranslateTransform3D OffsetY="0.259" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- 30 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.866" ScaleY="0.866" ScaleZ="0.866" />
          <TranslateTransform3D OffsetY="0.5" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- 45 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.707" ScaleY="0.707" ScaleZ="0.707" />
          <TranslateTransform3D OffsetY="0.707" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- 60 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.5" ScaleY="0.5" ScaleZ="0.5" />
          <TranslateTransform3D OffsetY="0.866" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- 75 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.259" ScaleY="0.259" ScaleZ="0.259" />
          <TranslateTransform3D OffsetY="0.966" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- -15 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.966" ScaleY="0.966" ScaleZ="0.966" />
          <TranslateTransform3D OffsetY="-0.259" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- -30 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.866" ScaleY="0.866" ScaleZ="0.866" />
          <TranslateTransform3D OffsetY="-0.5" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- -45 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.707" ScaleY="0.707" ScaleZ="0.707" />
          <TranslateTransform3D OffsetY="-0.707" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- -60 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.5" ScaleY="0.5" ScaleZ="0.5" />
          <TranslateTransform3D OffsetY="-0.866" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <!-- -75 degrees. -->
    <media3D:WirePath Rounding="16" Data="{StaticResource latitude}">
      <media3D:WirePath.Transform>
        <Transform3DGroup>
          <ScaleTransform3D ScaleX="0.259" ScaleY="0.259" ScaleZ="0.259" />
          <TranslateTransform3D OffsetY="-0.966" />
        </Transform3DGroup>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}" />

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="15" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="30" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="45" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="60" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="75" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="90" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="105" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="120" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="135" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="150" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:WirePath Rounding="16" Data="{StaticResource longitude}">
      <media3D:WirePath.Transform>
        <RotateTransform3D>
          <RotateTransform3D.Rotation>
            <AxisAngleRotation3D Axis="0 1 0" Angle="165" />
          </RotateTransform3D.Rotation>
        </RotateTransform3D>
      </media3D:WirePath.Transform>
    </media3D:WirePath>

    <media3D:Sphere Radius="0.998">
      <media3D:Sphere.Material>
        <DiffuseMaterial Brush="#E0FFFFFF" />
      </media3D:Sphere.Material>
    </media3D:Sphere>

    <ModelVisual3D>
      <ModelVisual3D.Content>
        <Model3DGroup>
          <AmbientLight Color="#808080" />
          <DirectionalLight Color="#808080" Direction="2, -3 -1" />
        </Model3DGroup>
      </ModelVisual3D.Content>
    </ModelVisual3D>

    <Viewport3D.Camera>
      <PerspectiveCamera Position="-1 2 5"
                               LookDirection="1 -2 -5"
                               UpDirection="0 1 0"
                               FieldOfView="45" />
    </Viewport3D.Camera>
  </Viewport3D>
</Window>
