<Window x:Class="C09.OrthographicProjection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:media3D="clr-namespace:Petzold.Media3D;assembly=Petzold.Media3D"
        Title="Orthographic Projection" Height="550" Width="650">
  <Window.Resources>
    <DiffuseMaterial x:Key="tubes" Brush="Black"/>
  </Window.Resources>
  <Viewport3D Width="8in">
    <!-- Vertical lines of figure. -->
    <media3D:Cylinder Point1="-0.5 1.75 -5" Point2="-0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <media3D:Cylinder Point1=" 0.5 1.75 -5" Point2=" 0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <!-- Horizontal lines of figure. -->
    <media3D:Cylinder Point1="-0.5 0.25 -2" Point2="0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <media3D:Cylinder Point1="-0.5 0.75 -3" Point2="0.5 0.75 -3" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <media3D:Cylinder Point1="-0.5 1.25 -4" Point2="0.5 1.25 -4" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <media3D:Cylinder Point1="-0.5 1.75 -5" Point2="0.5 1.75 -5" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
    <!-- Orthographic projection lines. -->
    <media3D:WireLine Point1="-0.5 1.75 -5" Point2="-0.5 1.75 0" Rounding="16"/>
    <media3D:WireLine Point1=" 0.5 1.75 -5" Point2=" 0.5 1.75 0" Rounding="16"/>
    <media3D:WireLine Point1="-0.5 0.25 -2" Point2="-0.48 0.25 0" Rounding="16"/>
    <media3D:WireLine Point1=" 0.5 0.25 -2" Point2=" 0.5 0.25 0" Rounding="16"/>
    <ModelVisual3D>
      <ModelVisual3D.Content>
        <Model3DGroup>
          <GeometryModel3D>
            <GeometryModel3D.Geometry>
              <MeshGeometry3D Positions="-1 0 0, 1 0 0, 1 2 0, -1 2 0"
                              TriangleIndices="0 1 2, 0 2 3"
                              TextureCoordinates = "0 1, 1 1, 1 0, 0 0"/>
            </GeometryModel3D.Geometry>
            <GeometryModel3D.Material>
              <MaterialGroup>
                <DiffuseMaterial Brush="#80808080"/>
                <DiffuseMaterial>
                  <DiffuseMaterial.Brush>
                    <!-- Orthographic Viewport -->
                    <VisualBrush>
                      <VisualBrush.Visual>
                        <Border Width="2" Height="2" Background="Transparent">
                          <Viewport3D>
                            <!-- Vertical lines of figure. -->
                            <media3D:Cylinder Point1="-0.5 1.75 -5" Point2="-0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <media3D:Cylinder Point1=" 0.5 1.75 -5" Point2=" 0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <!-- Horizontal lines of figure. -->
                            <media3D:Cylinder Point1="-0.5 0.25 -2" Point2="0.5 0.25 -2" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <media3D:Cylinder Point1="-0.5 0.75 -3" Point2="0.5 0.75 -3" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <media3D:Cylinder Point1="-0.5 1.25 -4" Point2="0.5 1.25 -4" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <media3D:Cylinder Point1="-0.5 1.75 -5" Point2="0.5 1.75 -5" Radius1="0.025" Radius2="0.025" Material="{StaticResource tubes}"/>
                            <ModelVisual3D>
                              <ModelVisual3D.Content>
                                <AmbientLight/>
                              </ModelVisual3D.Content>
                            </ModelVisual3D>
                            <Viewport3D.Camera>
                              <OrthographicCamera Position="0 1 0" LookDirection="0 0 -1" UpDirection="0 1 0" Width="2"/>
                            </Viewport3D.Camera>
                          </Viewport3D>
                        </Border>
                      </VisualBrush.Visual>
                    </VisualBrush>
                  </DiffuseMaterial.Brush>
                </DiffuseMaterial>
              </MaterialGroup>
            </GeometryModel3D.Material>
          </GeometryModel3D>
          <AmbientLight/>
        </Model3DGroup>
      </ModelVisual3D.Content>
    </ModelVisual3D>
    <Viewport3D.Camera>
      <PerspectiveCamera Position="-3 2.2 2" LookDirection="4 -1 -3" UpDirection="0 1 0" FieldOfView="90"/>
    </Viewport3D.Camera>
  </Viewport3D>
</Window>
