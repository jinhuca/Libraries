<Window x:Class="C13.AxesWithVector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:media3D="clr-namespace:Petzold.Media3D;assembly=Petzold.Media3D"
        Title="Axes with Vector" Height="450" Width="800">
  <Window.Resources>
    <Point3DCollection x:Key="arrow">0.5 0.5 0, 1 1 0.5</Point3DCollection>
  </Window.Resources>
  <Viewport3D Width="3in">
    <media3D:Axes Extent="2" ShowNumbers="false" Rounding="16"/>
    <media3D:WirePolyline Points="{StaticResource arrow}" ArrowEnds="End" Rounding="16"/>
    <Viewport3D.Camera>
      <OrthographicCamera Width="4" Position="-5 3 11" LookDirection="5 -3 -11"/>
    </Viewport3D.Camera>
  </Viewport3D>
</Window>
