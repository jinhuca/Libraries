<Window x:Class="C06.PenroseTriangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Penrose Triangle" Height="400" Width="420">
  <Window.Resources>
    <Style TargetType="Polygon">
      <Setter Property="StrokeLineJoin" Value="Round"/>
    </Style>
  </Window.Resources>
  <Canvas RenderTransform="1 0 0 1 96 96">
    <Polygon Points="108 0, 132 0, 40 168, 192 168, 192 192, 0 192" Stroke="Black" Fill="DarkGray"/>
    <Polygon Points="0 192, 192 192, 120 60, 134 48, 234 216, 12 216" Stroke="Black" Fill="LightGray"/>
    <Polygon Points="40 168, 66 168, 134 48, 234 216, 246 192, 132 0" Stroke="Black" Fill="DimGray"/>
  </Canvas>
</Window>
