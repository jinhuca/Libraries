<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="http://jinhu.visualization.net/WPFThemes/1.0">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Shared.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <ControlTemplate x:Key="TreeViewTemplate" TargetType="TreeView">
    <Grid>
      <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="ValidationStates">
          <VisualState x:Name="Valid"/>
          <VisualState x:Name="InvalidFocused"/>
          <VisualState x:Name="InvalidUnfocused"/>
        </VisualStateGroup>
      </VisualStateManager.VisualStateGroups>
      <Border x:Name="Border" 
              Background="Transparent"
              BorderBrush="Transparent" BorderThickness="1" CornerRadius="3">
        <ScrollViewer Style="{DynamicResource ScrollViewer}" 
                      Focusable="False" 
                      Padding="4" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" 
                      CanContentScroll="False" 
                      Foreground="{StaticResource Brush_Foreground_Normal}">
          <ItemsPresenter/>
        </ScrollViewer>
      </Border>
    </Grid>
  </ControlTemplate>
  
  <Style TargetType="TreeView">
    <Setter Property="Template" Value="{StaticResource TreeViewTemplate}"/>
  </Style>
</ResourceDictionary>