<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Shared.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <ControlTemplate x:Key="SeparatorTemplate" TargetType="{x:Type Separator}">
    <Border BorderBrush="{StaticResource Brush_Border_Normal}" BorderThickness="1"/>
  </ControlTemplate>
  
  <Style TargetType="{x:Type Separator}">
    <Setter Property="Height" Value="1"/>
    <Setter Property="Focusable" Value="false"/>
    <Setter Property="Template" Value="{StaticResource SeparatorTemplate}"/>
  </Style>
</ResourceDictionary>