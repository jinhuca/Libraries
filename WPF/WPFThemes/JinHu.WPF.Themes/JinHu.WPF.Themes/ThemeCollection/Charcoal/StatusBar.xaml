<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Shared.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <ControlTemplate x:Key="SeparatorTemplate" TargetType="{x:Type Separator}">
    <Rectangle Width="1" Margin="3" Fill="{StaticResource Brush_Background_Selected}"/>
  </ControlTemplate>
  <Style TargetType="{x:Type Separator}">
    <Setter Property="Template" Value="{StaticResource SeparatorTemplate}"/>
    <Setter Property="OverridesDefaultStyle" Value="True"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <ControlTemplate x:Key="StatusBarItemTemplate" TargetType="{x:Type StatusBarItem}">
    <ContentPresenter x:Name="ContentSite" Margin="3,0"/>
    <ControlTemplate.Triggers>
      <Trigger Property="IsEnabled" Value="false">
        <Setter Property="Foreground" Value="{StaticResource Brush_Foreground_Disable}"/>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <Style TargetType="{x:Type StatusBarItem}">
    <Setter Property="Template" Value="{StaticResource StatusBarItemTemplate}"/>
    <Setter Property="OverridesDefaultStyle" Value="True"/>
    <Setter Property="Foreground" Value="{StaticResource Brush_Foreground_Normal}"/>
  </Style>
  
  <ControlTemplate x:Key="StatusBarTemplate" TargetType="{x:Type StatusBar}">
    <Border Padding="1"
            BorderThickness="0.2"
            BorderBrush="{StaticResource Brush_Border_Normal}"
            Background="{StaticResource Brush_Background_Normal}">
      <ItemsPresenter/>
    </Border>
  </ControlTemplate>
  <Style TargetType="{x:Type StatusBar}">
    <Setter Property="Template" Value="{StaticResource StatusBarTemplate}"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="OverridesDefaultStyle" Value="true"/>
  </Style>

</ResourceDictionary>